<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="870.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.testjavafx.AdminPage">
   <children>
      <Label fx:id="welcomeLabel" layoutX="14.0" layoutY="10.0" text="Admin Dashboard" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>

      <!-- Movies Section -->
      <Label layoutX="14.0" layoutY="60.0" text="Movies" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <ListView fx:id="moviesListView" layoutX="14.0" layoutY="90.0" prefHeight="180.0" prefWidth="840.0" />

      <TextField fx:id="movieNameTextField" layoutX="14.0" layoutY="280.0" promptText="Enter Movie Name" />
      <Button layoutX="250.0" layoutY="280.0" mnemonicParsing="false" onAction="#addMovie" text="Add Movie" />
      <Button layoutX="400.0" layoutY="280.0" mnemonicParsing="false" onAction="#deleteMovie" text="Delete Selected Movie" />
      <Button layoutX="550.0" layoutY="280.0" mnemonicParsing="false" onAction="#editMovie" text="Edit Selected Movie" />
      <TextField fx:id="updatedMovieNameTextField" layoutX="700.0" layoutY="280.0" promptText="Enter Updated Movie Name" />

      <!-- Users Section -->
      <Label layoutX="14.0" layoutY="320.0" text="Users" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <ListView fx:id="usersListView" layoutX="14.0" layoutY="350.0" prefHeight="180.0" prefWidth="840.0" />

      <TextField fx:id="userNameTextField" layoutX="14.0" layoutY="540.0" promptText="Enter User Name" />
      <Button layoutX="250.0" layoutY="540.0" mnemonicParsing="false" onAction="#addUser" text="Add User" />
      <Button layoutX="400.0" layoutY="540.0" mnemonicParsing="false" onAction="#deleteUser" text="Delete Selected User" />
      <Button layoutX="550.0" layoutY="540.0" mnemonicParsing="false" onAction="#editUser" text="Edit Selected User" />
   </children>
</AnchorPane>
